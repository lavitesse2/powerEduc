<h1>Liste des Séances</h1>

<div class="table card mt-2 mb-2">
        <table class="table">
            <thead>
              <tr>
                <th scope="col">id</th>
                <th scope="col">Séance</th>
                <th scope="col">Salle</th>
                <th scope="col">Matiere</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            {{#seance}}
            <tbody>
              <tr>
                
                    <th scope="row">{{id}} </th>
                    <td>{{libelleseance}} </td>
                    <td>{{idsalle}} </td>
                    <td>{{idmatiere}} </td>
                    <td>
                        <input type="button" class="btn btn-primary" value="modifier" onclick="location.href='{{seanceedit}}?id={{id}}'">
                        <input type="button" class="btn btn-danger local_annee_delete_button" value="supprimer" onclick="location.href='{{seancesupp}}?id={{id}}'">
                    </td>
                </tr>
            </tbody>
            
            {{/seance}}
          </table>
</div>

