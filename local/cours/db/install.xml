<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/cours/db" VERSION="20200213" COMMENT="XMLDB file for Local cours"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>

    <TABLE NAME="cours" COMMENT="each record is a cours">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="cours" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="libelle" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="nbrechap" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>
